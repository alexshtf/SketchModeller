<Window x:Class="SkelToCyl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ptz3d="clr-namespace:Petzold.Media3D;assembly=Petzold.Media3D"
        Title="MainWindow" Height="350" Width="525">
    <Grid Background="Black">
        <Viewport3D>
            <Viewport3D.Camera>
                <PerspectiveCamera Position="0,8,20"
                                   LookDirection="0,-8,-20"
                                   FieldOfView="60.0"
                                   NearPlaneDistance="0.1"
                                   FarPlaneDistance="100"
                                   UpDirection="0,1,0" />
            </Viewport3D.Camera>
            <Viewport3D.Children>
                <ptz3d:Axes Color="LightBlue"
                            FontSize="0.2"
                            ArrowEnds="End"
                            ArrowLength="0.2"
                            Thickness="2"/>
                <ptz3d:WirePolyline x:Name="model" Color="Blue" />
            </Viewport3D.Children>
        </Viewport3D>
    </Grid>
</Window>

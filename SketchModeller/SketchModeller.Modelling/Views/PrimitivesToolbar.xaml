<ToolBar x:Class="SketchModeller.Modelling.Views.PrimitivesToolbar"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
         mc:Ignorable="d" 
         Focusable="False"
         d:DesignHeight="300" d:DesignWidth="300">
    <ToggleButton Focusable="False" IsChecked="{Binding IsManipulationMode}">Manipulation</ToggleButton>
    <ToggleButton Focusable="False" IsChecked="{Binding IsCylinderMode}">Cylinder</ToggleButton>
    <ToggleButton Focusable="False" IsChecked="{Binding IsHalfSphereMode}">Half-sphere</ToggleButton>
    <ToggleButton Focusable="False" IsChecked="{Binding IsConeMode}">Cone</ToggleButton>
    <ToggleButton Focusable="False" IsChecked="{Binding IsDuplicateMode}">Duplicate</ToggleButton>
    <Button Focusable="False" Command="{Binding SnapCommand}">Snap</Button>
</ToolBar>
